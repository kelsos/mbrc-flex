<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Playlist" viewActivate="viewActivateHandler()">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import Network.ConnectionManager;
			import Network.Protocol.AnswerHandler;
			
			import spark.events.IndexChangeEvent;
			private function viewActivateHandler():void
			{
				AnswerHandler.getInstance().addEventListener("playlistDataAvailable",playlistDataHandler);
				ConnectionManager.getInstance().requestPlaylist();
			}
			protected function playlistDataHandler(event:Event):void
			{
					playlistData.dataProvider=AnswerHandler.getInstance().getPlaylistData();
			}
			
			protected function button1_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				ConnectionManager.getInstance().requestPlaylist();
			}
			
			protected function playlistDatachangeHandler(event:IndexChangeEvent):void
			{
				
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:List id="playlistData" x="10" y="9" width="460" height="582"
			change="playlistDatachangeHandler(event)"></s:List>
	<s:Button x="10" y="599" label="Button" click="button1_clickHandler(event)"/>
</s:View>
