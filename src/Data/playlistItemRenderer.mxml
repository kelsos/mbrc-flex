<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark">
	<s:VGroup >
		<s:Line width="{this.width-5}">
		</s:Line>
		<s:Label text="{data.title}" fontSize="24" color="#8F8145"/>
		<s:Label text="{data.artist}" fontSize="20" color="#8F8145"/>
		<s:Line width="{this.width-5}">
			<s:stroke>
				<s:SolidColorStroke
					color="#707070"
					weight="2"/>
			</s:stroke>
		</s:Line>
	</s:VGroup>
</s:ItemRenderer>
